/* pages/msgbd/msgbd.wxss */

.items {
  width: 100%;
  display: flex;
  flex-direction:column;
  justify-content: flex-start;
}

.item {
  padding-left: 5rpx;
}

.head {
  height: 40rpx;
  display: flex;
  flex-direction: row;
  font-weight: bold
}

.head image{
  width: 40rpx;
  height: 40rpx;
}

.body {
  padding: 10rpx 40rpx 10rpx 40rpx;
}

.bottom {
  color: #909090;
  height: 40rpx;
  font-size-adjust: 0.4;
}

.reply {
  margin-top: 14rpx;
  padding: 10rpx;
  background-color: #E0E0E0;
  font-size-adjust: 0.5;
}

.reply label {
  font-weight: bold;
}

.seperator {
  margin: 10rpx 40rpx 10rpx 40rpx;
  border-color: #E0E0E0;
  border-bottom-style: solid;
  border-bottom-width: 1rpx
  
}

.comment {
  width: 100%;
  height: 80rpx;
  border-top-style: solid; 
  border-color: #E0E0E0;
  border-width: 1rpx;
  position: fixed;
  bottom: 0;
  right: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.comment .input {
  width: 78%;
  height: 60%;
  margin: 10rpx 10rpx 10rpx 20rpx;
  padding:5rpx 10rpx 5rpx 10rpx;
  background-color: #E0E0E0;
}

.comment .send {
  width: 22%;
  height: 60%rpx;
  margin: 10rpx 0rpx 10rpx 0rpx;
  padding:0rpx;
  font-size: 1rpx;

}